import java.util.Scanner;

public class ProcessAName5026201067 {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Input your full name");
        String nama = in.nextLine();
        int posSpace = nama.indexOf(' ');

        String formatedNama = nama.substring(posSpace + 1) + ", " +
                nama.charAt(0) + ".";

        System.out.println("Your name is : " + formatedNama);
    }
}
